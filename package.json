{
  "name": "svitlo-e",
  "version": "5.2.0",
  "description": "Collect and display power outages info",
  "scripts": {
    "build": "npm run clean:dist && npm-run-all -p build:*",
    "build:client": "node esbuild.client.mjs",
    "build:server": "node esbuild.server.mjs",
    "clean:dist": "rimraf dist/client/script* dist/client/style* dist/client/index* dist/server/index*",
    "serve:client": "http-server dist/client --cors --proxy http://localhost:3000",
    "serve:server": "node dist/server/index.js",
    "serve": "npm-run-all -p serve:*",
    "dev": "npm run clean:dist && npm-run-all -p 'build:* -- --watch' serve:client",
    "test": "echo \"Error: no test specified and nobody cares\" && exit 1"
  },
